local RollToggles, BuyToggles = {}, {}
local AutoEquipEnabled = false
local IsMinimized = false

local UIS = game:GetService("UserInputService")
local Players = game:GetService("Players")
local RS = game:GetService("ReplicatedStorage")

local LP = Players.LocalPlayer
local PGui = LP:FindFirstChildOfClass("PlayerGui") or LP:FindFirstChild("PlayerGui")

if PGui:FindFirstChild("DiceManager_Mobile") then PGui["DiceManager_Mobile"]:Destroy() end

-- [[ UI SETUP ]]
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "DiceManager_Mobile"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = PGui

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 220, 0, 300) -- Smaller width/height for mobile
MainFrame.Position = UDim2.new(0.5, -110, 0.5, -150)
MainFrame.BackgroundColor3 = Color3.fromRGB(12, 12, 12)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true 
MainFrame.Parent = ScreenGui
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 6)

-- [[ HEADER / MINIMIZE BUTTON ]]
local Title = Instance.new("TextButton") -- Changed to TextButton for minimizing
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Title.Text = "  DICE MANAGER (Tap to Hide)"
Title.TextColor3 = Color3.fromRGB(255, 60, 60)
Title.TextXAlignment = Enum.TextXAlignment.Left
Title.Font = Enum.Font.GothamBold
Title.TextSize = 10
Title.Parent = MainFrame
Instance.new("UICorner", Title).CornerRadius = UDim.new(0, 6)

-- [[ CONTAINER (Everything inside this hides when minimized) ]]
local Container = Instance.new("Frame")
Container.Size = UDim2.new(1, 0, 1, -30)
Container.Position = UDim2.new(0, 0, 0, 30)
Container.BackgroundTransparency = 1
Container.Parent = MainFrame

-- [[ AUTO EQUIP BUTTON ]]
local EquipBtn = Instance.new("TextButton")
EquipBtn.Size = UDim2.new(1, -10, 0, 25)
EquipBtn.Position = UDim2.new(0, 5, 0, 5)
EquipBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
EquipBtn.Text = "AUTO EQUIP: OFF"
EquipBtn.TextColor3 = Color3.fromRGB(200, 200, 200)
EquipBtn.Font = Enum.Font.GothamBold
